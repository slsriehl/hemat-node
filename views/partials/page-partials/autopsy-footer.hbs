    <div class="card text-center">
        <div class="card-header button-box">
            <ul class="nav nav-pills standard-button-box">
                <a class="btn btn-lg btn-outline-info p-2 writeReport">
                    <small>Write Report</small>
                </a>
                <a class="btn btn-lg btn-outline-success p-2 ml-4" >
                    <small class="copy btn-default" data-toggle="popover" data-placement="top" data-clipboard-target="#outPut-1" >
