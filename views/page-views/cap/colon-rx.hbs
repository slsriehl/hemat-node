<div class="container-fluid">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item"><i class="fa fa-flask mr-2"></i>CAP Cancer Checklist</li>
        <li class="breadcrumb-item active"><i class="fa fa-flask mr-2"></i>Colon Cancer (Resections)</li>
    </ol>
    {{> message-center this}}
    {{> page-partials/cap-header}}

    <div class="row">
        {{> page-partials/cap-validate-alert}}
        <div class="col col-md-8">

            <!-- paste markup here-->
            <hr class="p-2" >
            <h5>Procedure</h5>
            <select id="box1" class='form-control selectpicker form-control-sm col-sm-6'>
                <option data-location="resection">Right hemicolectomy</option>
                <option data-location="resection">Transverse colectomy</option>
                <option data-location="resection">Left hemicolectomy</option>
                <option data-location="resection">Sigmoidectomy</option>
                <option data-location="resection">Low anterior resection</option>
                <option data-location="resection">Total abdominal colectomy</option>
                <option data-location="resection">Abdominoperineal resection</option>
                <option data-location="emr">Transanal disk excision (local excision)</option>
                <option data-location="emr">Endoscopic mucosal resection</option>
                <option>Not specified</option>
            </select>





            <hr class="p-2" >
            <h5>Tumor Site (select all that apply)
            <i class="fa fa-question-circle ml-2" data-placement="right" data-toggle="tooltip"
               title="A tumor is classified as rectal if its inferior margin lies less than 16 cm from the
               anal verge or if any part of the tumor is located at least partly within the supply of the superior rectal artery" aria-hidden="true"></i>
            </h5>
            <select multiple id="box2" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Cecum</option>
                <option>Ileocecal valve</option>
                <option>Right (ascending) colon</option>
                <option>Hepatic flexure</option>
                <option>Transverse colon</option>
                <option>Splenic flexure</option>
                <option>Left (descending) colon</option>
                <option>Sigmoid colon</option>
                <option>Rectosigmoid region</option>
                <option>Rectum</option>
                <option>Colon, not otherwise specified</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>Tumor Size (cm)</h5>
            <input type="text" class="form-control form-control-sm col-sm-6" id="box3" placeholder="">




            <hr class="p-2" >
            <h5>Macroscopic Tumor Perforation</h5>
            <select id="box4" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Not identified</option>
                <option>Present</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>Histologic Type</h5>
            <select id="box5" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Adenocarcinoma</option>
                <option>Mucinous adenocarcinoma</option>
                <option>Signet-ring cell carcinoma</option>
                <option>Medullary carcinoma</option>
                <option>Micropapillary carcinoma</option>
                <option>Serrated adenocarcinoma</option>
                <option>Large cell neuroendocrine carcinoma</option>
                <option>Small cell neuroendocrine carcinoma</option>
                <option>Neuroendocrine carcinoma (poorly differentiated)</option>
                <option>Squamous cell carcinoma</option>
                <option>Adenosquamous carcinoma</option>
                <option>Undifferentiated carcinoma</option>
                <option>Other histologic type </option>
                <option>Carcinoma, type cannot be determined</option>
            </select>

            <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box5_2' style='display:none;' placeholder='Specify Other'>





            <hr class="p-2" >
            <h5>Histologic Grade</h5>
            <select id="box6" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>G1: Well differentiated</option>
                <option>G2: Moderately differentiated</option>
                <option>G3: Poorly differentiated</option>
                <option>G4: Undifferentiated</option>
                <option>Other</option>
                <option>GX: Cannot be assessed</option>
                <option>Not applicable</option>
            </select>

            <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box6_2' style='display:none;' placeholder='Specify Other'>





            <hr class="p-2" >
            <h5>Tumor Extension</h5>
            <select id="box7" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>No evidence of primary tumor</option>
                <option>No invasion (high-grade dysplasia)</option>
                <option>Tumor invades lamina propria/muscularis mucosae (intramucosal carcinoma)</option>
                <option>Tumor invades submucosa</option>
                <option>Tumor invades muscularis propria</option>
                <option>Tumor invades through the muscularis propria into pericolorectal tissue</option>
                <option>Tumor invades the visceral peritoneum </option>
                <option>Tumor directly invades adjacent structures</option>
                <option>Cannot be assessed</option>
            </select>

            <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box7_2' style='display:none;' placeholder='Specify structures'>





            <hr class="p-2">
            <h5>Margins</h5>
            <select id="box8" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>All margins are uninvolved by tumor </option>
                <option>One or more margins involved by neoplasia</option>
            </select>

            <div class="py-2 w-100"></div>


            <div class="negmargins ml-3">
                <h6 class="mt-3">Choose margins examined</h6>
                <select multiple id="box9" class='form-control selectpicker form-control-sm col-sm-6'>
                    <option>proximal</option>
                    <option>distal</option>
                    <option>radial</option>
                    <option>mesenteric</option>
                    <option>mucosal</option>
                    <option>deep</option>
                    <option>Other</option>
                </select>
                <input type="text" class="form-control form-control-sm mt-1 col-sm-6" id='box9_2' style='display:none;' placeholder='Specify Other margin'>

                <div class="py-2 w-100"></div>


                <h6 class="mt-2">+ Distance of invasive carcinoma from closest margin (mm)</h6>
                <input type="number" class="form-control form-control-sm col-sm-6 opt" id="box9_3" placeholder="">

                <div class="rect" style="display: none;">
                    <h6 class="mt-2">Distance of tumor from radial margin - required only for rectal tumors (mm)</h6>
                    <input type="number" class="form-control form-control-sm col-sm-6 " id="box9_4" >

                    <h6 class="mt-2">+ Distance of tumor from distal margin - recommended for rectal tumors (mm)</h6>
                    <input type="number" class="form-control form-control-sm col-sm-6 opt" id="box9_5">
                </div>
            </div>


            <div class="posmargins ml-3" style="display: none;" >

                <div class="segmental">

                    <div class="py-2 w-100"></div>

                    <h6>Proximal Margin</h6>
                    <select id="box10" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by invasive carcinoma</option>
                        <option>Involved by invasive carcinoma</option>
                    </select>

                    <input type="number" class="form-control form-control-sm mt-3 col-sm-6" id='box10_2' style='display:none;' placeholder='Specify Distance of tumor from margin (mm)'>


                    <div class="py-2 w-100"></div>


                    <h6>Distal Margin</h6>
                    <select id="box11" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by invasive carcinoma</option>
                        <option>Involved by invasive carcinoma</option>
                    </select>

                    <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box11_2' style='display:none;' placeholder='Specify Uninvolved'>


                    <div class="py-2 w-100"></div>


                    <h6>Radial Margin</h6>
                    <select id="box12" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by invasive carcinoma</option>
                        <option>Involved by invasive carcinoma</option>
                    </select>

                    <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box12_2' style='display:none;' placeholder='Specify Uninvolved'>
                </div><!-- end segmental margins-->

                <div class="emr" style="display: none;">
                    <h6>Deep Margin</h6>
                    <select id="box13" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by invasive carcinoma</option>
                        <option>Involved by invasive carcinoma</option>
                    </select>

                    <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box13_2' style='display:none;' placeholder='Specify Uninvolved'>


                    <div class="py-2 w-100"></div>


                    <h6>Mucosal Margin</h6>

                    <select id="box14" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by invasive carcinoma, intramucosal adenocarcinoma, high-grade dysplasia, and adenoma</option>
                        <option>Uninvolved by invasive carcinoma</option>
                        <option>Involved by invasive carcinoma</option>
                    </select>

                    <input type="text" class="form-control form-control-sm col-sm-6" id='box14_1' style='display:none;' placeholder='Specify closest margin to invasive tumor'>
                    <input type="text" class="form-control form-control-sm col-sm-6" id='box14_2' style='display:none;' placeholder='Specify distance of invasive tumor from margin (mm)'>
                    <input type="text" class="form-control form-control-sm col-sm-6" id='box14_3' style='display:none;' placeholder='Specify involved margin'>


                    <div class="insitu" style="display:none;">

                        <div class="py-2 w-100"></div>

                        <h6>Are any margins involved by pre-invasive tumor?</h6>
                        <select multiple id="box14_4" class='form-control selectpicker form-control-sm col-sm-6'>
                            <option>All margins uninvolved by pre-invasive tumor</option>
                            <optgroup label="Yes, choose types involving margin">
                            <option>Intramucosal adenocarcinoma</option>
                            <option>High-grade dysplasia</option>
                            <option>Adenoma</option>
                            </optgroup>
                        </select>

                    </div>
                </div>

                <div class="other">

                    <div class="py-2 w-100"></div>


                    <h6>Other Margin</h6>
                    <select id="box15" class='form-control selectpicker form-control-sm col-sm-6'>
                        <option selected>Not applicable</option>
                        <option>Cannot be assessed</option>
                        <option>Uninvolved by tumor</option>
                        <option>Involved by tumor</option>
                    </select>
                    <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box15_2' style='display:none;' placeholder='Specify '>
                </div>


            </div><!-- end hidden positive margins-->

            <hr class="p-2" >
            <h5>Treatment Effect
            <!-- Button trigger modal -->
            <button class="btn btn-sm btn-info ml-2 p-1"  data-toggle="modal" data-target="#help_treat">A word about scoring treatment effect</button>

            <!-- Histology help Modal -->
            {{> page-modals/cap-helpers/esoph-treatment}}
            </h5>
            <select id="box16" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>No known presurgical therapy</option>
                <option>Present, complete response, score 0</option>
                <option>Present, near complete response, score 1</option>
                <option>Present, partial response, score 2</option>
                <option>Absent, poor or no response, score 3</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>Lymphovascular Invasion</h5>
            <select id="box17" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Not identified</option>
                <option>Present, small vessel lymphovascular invasion</option>
                <option>Present, large vessel (venous) invasion</option>
                <option>Present, intramural</option>
                <option>Present, extramural</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>Perineural Invasion</h5>
            <select id="box18" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Not identified</option>
                <option>Present</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>+ Tumor Budding
            <!-- Button trigger modal -->
            <button class="btn btn-sm btn-info ml-2 p-1"  data-toggle="modal" data-target="#help_budding">A word about tumor budding</button>

            <!-- Histology help Modal -->
            {{> page-modals/cap-helpers/colon-tumor-budding}}

            </h5>
            <input type="number" class="form-control form-control-sm mt-2 mb-2 col-sm-6 opt" id='box19_2'
                   placeholder='Specify # of buds'>

            <select id="box19" class='form-control selectpicker form-control-sm col-sm-6 opt'>
                <option></option>
                <option>Low score (0-4)</option>
                <option>Intermediate score (5-9)</option>
                <option>High score (10 or more)</option>
                <option>Cannot be determined</option>
            </select>





            <hr class="p-2" >
            <h5>Tumor Deposits
            <i class="fa fa-question-circle ml-2" data-placement="right"
               data-toggle="tooltip" data-html="true"
               title="<p>A tumor focus in the pericolic/perirectal fat or in adjacent mesentery (
               mesocolic or rectal fat) within the lymph drainage area of the primary tumor, but without identifiable
               lymph node tissue or vascular structure.</p>
               <p>The presence of tumor deposits in the absence of any
               regional node involvement is categorized as N1c, irrespective of T category.</p>" aria-hidden="true"></i>
            </h5>
            <select id="box20" class='form-control selectpicker form-control-sm col-sm-6'>
                <option>Not identified</option>
                <option>Present</option>
                <option>Cannot be determined</option>
            </select>

            <input type="number" class="form-control form-control-sm mt-3 col-sm-6" id='box20_2' style='display:none;' placeholder='Specify # of deposits'>





            <hr class="p-2" >
            <h5>Pathologic Staging (pTNM)

            </h5>

            <h6>TNM Descriptors (select all that apply)</h6>
            <select id="box21" class='form-control selectpicker form-control-sm col-sm-6' multiple>
                <option selected value="Not applicable">Not applicable</option>
                <option>m</option>
                <option>r</option>
                <option>y</option>
            </select>

            <div class="py-2 w-100"></div>

            <h6 class='mt-2'>pT</h6>
            <select id="box22" class='form-control selectpicker form-control-sm col-sm-6'>
                <option value="pTX">pTX: Primary tumor cannot be assessed</option>
                <option value="pT0">pT0: No evidence of primary tumor</option>
                <option value="pTis">pTis: Carcinoma in situ, intramucosal carcinoma (involvement of lamina propria with no extension through muscularis mucosae)</option>
                <option value="pT1">pT1: Tumor invades the submucosa (through the muscularis mucosa but not into the muscularis propria)</option>
                <option value="pT2">pT2: Tumor invades the muscularis propria</option>
                <option value="pT3">pT3: Tumor invades through the muscularis propria into pericolorectal tissues</option>
                <option value="pT4a">pT4a: Tumor invades through the visceral peritoneum </option>
                <option value="pT4b">pT4b: Tumor directly invades or adheres to adjacent organs or structures</option>
            </select>

            <div class="py-2 w-100"></div>

            <h6 class='mt-2'>pN
                <!-- Button trigger slider -->
                <button class="btn btn-sm btn-success ml-3 p-1" type="button" data-toggle="collapse" data-target="#help-pn"
                        aria-expanded="false" aria-controls="collapseExample">
                    Regional lymph nodes based on tumor site
                </button>
                <!-- Button trigger modal -->
                <button class="btn btn-sm btn-info ml-2 p-1"  data-toggle="modal" data-target="#help_nodes">A word about lymph node designation</button>

            </h6>

            <!-- Histology help Modal -->
            {{> page-modals/cap-helpers/colon-nodes}}

            <div class="collapse mb-2" id="help-pn">
                <div class="card card-block">
                    <img class="img img-fluid" src="/img/cap/cap-colon-pn.png ">
                </div>
            </div>
            <select id="box23" class='form-control selectpicker form-control-sm col-sm-6'>
                <option value="pNX">pNX: Regional lymph nodes cannot be assessed</option>
                <option value="pN0">pN0: No regional lymph node metastasis</option>
                <option value="pN1a">pN1a: One regional lymph node is positive</option>
                <option value="pN1b">pN1b: Two or three regional lymph nodes are positive</option>
                <option value="pN1c">pN1c: No regional lymph nodes are positive, but there are tumor deposits in the subserosa, mesentery, or mesorectal tissues.</option>
                <option value="pN2a">pN2a: Four to six regional lymph nodes are positive</option>
                <option value="pN2b">pN2b: Seven or more regional lymph nodes are positive</option>
            </select>

            <div class="py-2 w-100"></div>

            <h6 class='mt-2'>pM</h6>
            <select id="box24" class='form-control selectpicker form-control-sm col-sm-6'>
                <option selected value='pMx'>pMx: Not applicable</option>
                <option value="pM1a">pM1a: Metastasis to one site or organ is identified without peritoneal metastasis</option>
                <option value="pM1b">pM1b: Metastasis to two or more sites or organs is identified without peritoneal metastasis</option>
                <option value="pM1c">pM1c: Metastasis to the peritoneal surface is identified alone or with other site or organ metastases</option>
            </select>
            <input type="text" class="form-control form-control-sm col-sm-6" id="box24_2" style="display:none;" placeholder="Specify metastatic sites">

            <div class="py-2 w-100"></div>

            <form class="form-inline mt-2">
                <label class="form-check-label">Check here if any lymph nodes submitted?
                    <input class="form-control form-control-sm col-sm-6" type="checkbox" id="box25" >
                </label>
            </form>

            <div class='lnchk' style='display:none;'>
                <form class="form-inline mt-2 col-8">
                    <label class="m-2">Number of lymph nodes examined:
                        <input type="number" class="form-control form-control-sm col-sm-6 ml-3 maxnode" id="box26" style="width:100px"></label>
                    <label class="m-2">Number of lymph nodes involved:
                        <input type="number" class="form-control form-control-sm col-sm-6 ml-3 subnode" id="box27" style="width:100px"></label>
                </form>
            </div>


            <hr class="p-2" >
            <h5>+ Additional Pathologic Findings (select all that apply)</h5>
            <select multiple id="box28" class='form-control selectpicker form-control-sm col-sm-6 opt'>
                <option>None identified</option>
                <option>Adenoma(s)</option>
                <option>Ulcerative colitis</option>
                <option>Crohn disease</option>
                <option>Diverticulosis</option>
                <option>Dysplasia arising in inflammatory bowel disease</option>
                <option>Polyps, type</option>
                <option>Other</option>
            </select>
            <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box28_2' style='display:none;' placeholder='Specify type'>
            <input type="text" class="form-control form-control-sm mt-3 col-sm-6" id='box28_3' style='display:none;' placeholder='Specify Other'>







            <!-- end markup-->

            <!-- close markup -->
        </div>
        {{> page-partials/cap-footer}}
        <!-- close row -->
    </div>
    {{> page-partials/history-module}}
    <!-- close container -->
</div>
