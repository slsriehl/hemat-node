<div class="container-fluid">
	{{#if messages}}
		{{#each messages}}
			<div class="row">
				<div class="col col-md-12 message-item" id="{{id}}">
					<span>{{{text}}}</span>
					<!-- / message-item col -->
				</div>
				<!-- /message-item row -->
			</div>
		{{/each}}
	{{/if}}

	<div class="row">
		<div class="col col-md-4">
			<!-- end placeholder div -->
		</div>
		<div class="col col-md-4">
			<h2 class="text-center">Sign Up</h2>
			<form id="signup-form" action="/user/signup" method="POST">
				<div class="form-group">
					<label>First Name</label>
					<input
						type="text"
						name="firstname"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
						pattern="^(?!.*(?:\u0022|\u0027|\u201C|\u201D|\u2018|\u2019|\u0060|\u00B4).*)"
						text="First name can't have the \u0022 or \u0027 symbols"
						required
					/>
					<label>Last Name</label>
					<input
						type="text"
						name="lastname"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
						pattern="^(?!.*(?:\u0022|\u0027|\u201C|\u201D|\u2018|\u2019|\u0060|\u00B4).*)"
						text="Last name can't have the \u0022 or \u0027 symbols"
						required
					/>
				</div>
				<div class="form-group">
					<label>User Name</label>
					<!-- disallow quotes and backslashes -->
					<input
						type="text"
						name="username"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
						pattern="^(?!.*(?:@|\u0022|\u0027|\u201C|\u201D|\u2018|\u2019|\u0060|\u00B4).*)"
						text="Username can't have the @, \u0022, or \u0027 symbols"
						required
					/>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input
						type="email"
						name="email"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
						required
					/>
				</div>
				<div class="form-group">
					<label>Mobile Phone (optional)</label>
					<!-- world number library? https://intl-tel-input.com/ -->
					<input
						type="tel"
						name="mobile"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
						pattern="^(?!.*(?:\u0022|\u0027|\u201C|\u201D|\u2018|\u2019|\u0060|\u00B4).*)"
						text="Phone can't have the \u0022 or \u0027 symbols"
					/>
				</div>
				<div class="form-group">
					<label>Password</label>
					<input
						type="password"
						name="password"
						class="form-control"
						pattern="^\S{8,}(?!.*(?:\u0022|\u0027|\u201C|\u201D|\u2018|\u2019|\u0060|\u00B4).*)$"
						text="Password can't have the \u0022 or \u0027 symbols and must be at least 8 characters."
						required
					/>
					<div class="hide-show">
						<small class="show">Show</small>
					</div>
				</div>
				<button type="submit" class="btn btn-default">Sign Up</button>
			</form>
			<!-- end signup form col -->
		</div>
		<div class="col col-md-4">
			<!-- end placeholder col -->
		</div>
		<!-- end form row -->
	</div>
	<!-- end container fluid -->
</div>
