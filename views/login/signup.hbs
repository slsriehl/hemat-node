<div class="container-fluid">

	<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="#">Home</a></li>
			<li class="breadcrumb-item active" id="bc-jump">Sign Up</li>
	</ol>

{{> message-center this}}

	<div class="row">
		<div class="col col-md-4">
			<!-- end placeholder div -->
		</div>
		<div class="col col-md-4">
			<h2 class="text-center">Sign Up</h2>
			<form id="signup-form" action="/user/signup" method="POST">
				<div class="form-group">
					<label>First Name</label>
					<input
						type="text"
						name="firstname"
						class="form-control"
						id="firstname"
						autofocus
					/>
					<label>Last Name</label>
					<input
						type="text"
						name="lastname"
						class="form-control"
						id="lastname"
					/>
				</div>
				<div class="form-group">
					<label>User Name</label>
					<!-- disallow quotes and backslashes -->
					<input
						type="text"
						name="username"
						class="form-control"
						id="username"
					/>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input
						type="email"
						name="email"
						class="form-control"
						id="email"
					/>
				</div>
				<div class="form-group">
					<label>Mobile Phone (optional)</label>
					<!-- world number library? https://intl-tel-input.com/ -->
					<input
						type="tel"
						name="mobile"
						class="form-control"
						id="mobile"
					/>
				</div>
				<div class="form-group">
					<label>Password</label>
					<input
						type="password"
						name="password"
						class="form-control"
						id="password"
					/>
					<div class="hide-show">
						<small class="show">Show</small>
					</div>
				</div>
				<div class="g-recaptcha" data-sitekey="6Le99i0UAAAAAIIKkc2tRvlXTjVdwxxrwHg7YY2d">
				</div>
				<button type="submit" class="btn btn-default">Sign Up</button>
			</form>
			<!-- end signup form col -->
		</div>
		<div class="col col-md-4">
			<!-- end placeholder col -->
		</div>
		<!-- end form row -->
	</div>
	<!-- end container fluid -->
</div>
