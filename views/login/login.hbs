<div class="container-fluid">
	{{#if messages}}
		{{#each messages}}
			<div class="row">
				<div class="col col-md-12 message-item" id="{{id}}">
					{{text}}
					<!-- / message-item col -->
				</div>
				<!-- /message-item row -->
			</div>
		{{/each}}
	{{/if}}

	<div class="row">
		<div class="col col-md-4">
			<!-- end placeholder div -->
		</div>
		<div class="col col-md-4">
			<h2 class="text-center">Login</h2>
			<form id="login-form" action="/user/login" method="POST">
				<div class="form-group">
					<label>Email</label>
					<input
						type="email"
						name="email"
						class="form-control"
						autocapitalize="off"
						autocorrect="off"
					/>
				</div>
				<div class="form-group">
					<label>Password</label>
					<input
						type="password"
						name="password"
						class="form-control"
					/>
					<div class="hide-show">
						<span class="show">Show</span>
					</div>
				</div>
				<button type="submit" class="btn btn-default">Login</button>
			</form>
			<!-- end login form col -->
		</div>
		<div class="col col-md-4">
			<!-- end placeholder col -->
		</div>
		<!-- end form row -->
	</div>
	<!-- end container fluid -->
</div>
